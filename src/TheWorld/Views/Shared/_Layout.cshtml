<!DOCTYPE html>
<html>
<head>
    <title>The World! - @ViewBag.Title</title>
    <meta charset="utf-8" />

    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div id="sidebar">
        <img class="headshot" src="~/img/user1.jpg" alt="headshot" />
        <span id="username">Sam Hastingss</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a  asp-controller="App" asp-action="Contact">Contact</a></li>
            <li><a  asp-controller="App" asp-action="About">About Me</a></li>
            @*@Html.ActionLink("Home", "Index")*@
        </ul>
    </div>
    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Toggle Menu</button>
            </div>
            <div>
                @RenderBody()
            </div>
        </div>
        <div id="footer">
            &copy; 2015 The World Ltd.
        </div>
    </div>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/site.js">
    </script>
    @RenderSection("Scripts", false)
</body>
</html>