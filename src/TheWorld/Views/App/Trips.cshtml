@model IEnumerable<TheWorld.Models.Trip>

@{
    ViewBag.Title = "Home Page";
}

@section Scripts {
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/simplecontrols.js"></script>
    <script src="~/js/app-trips.js"></script>
    <script src="~/js/tripsController.js"></script>
}
<div class="row" ng-app="app-trips">
    <div ng-controller="tripsController as model" class="col-md-6 col-md-offset-3">
        <div class="text-danger" ng-show="model.errorMessage">{{model.errorMessage}}</div>
        <wait-cursor display-when="model.isBusy">
        </wait-cursor>
        <table class="table table-responsive table-striped">
            <tr ng-repeat="trip in model.trips">
                <td>{{trip.name}}</td>
                <td>{{trip.created | date: 'dd-MM-yyyy'}}</td>
                <td><a href="#" class="btn btn-sm btn-primary">Manage</a></td>
            </tr>
        </table>
        <form novalidate name="newTripForm" ng-submit="model.addTrip()">
            <div class="form-group">
                <label>Trip Name</label>
                <input class="form-control" type="text" id="name" name="name" ng-model="model.newTrip.name" required ng-minlength="5" />
                <span class="text-warning" ng-show="newTripForm.name.$error.required">Name is required</span>
                <span class="text-warning" ng-show="newTripForm.name.$error.minlength">Min length is 5</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-sm btn-success" ng-disabled="newTripForm.$invalid" />
            </div>

        </form>
    </div>
    <div class="col-md-6">
        <h2>The World</h2>
        <p>This will be a fun website soon</p>

        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control" />
            </div>
            <div><input type="submit" value="Add" class="btn btn-success" /></div>
        </form>
    </div>
    <div class="col-md-6">
        <h2>The Map</h2>
        <ul>
            @foreach (var trip in Model)
            {
                <li>@trip.Name (@trip.Created.ToShortDateString())</li>
            }
        </ul>

    </div>
</div>

